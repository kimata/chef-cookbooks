# Generated by Chef for <%= node['fqdn'] %>

view "internal" {
    match-clients { local-area; };

    zone "." IN {
        type		hint;
        file        	"/etc/bind/db.root";
    };

    zone "localhost" IN {
        type         	master;
        file         	"/etc/bind/db.local";
    };

    zone "127.in-addr.arpa" IN {
        type         	master;
        file         	"/etc/bind/db.127";
    };
    zone "<%= node['domain'] %>" IN {
        type         	master;
        file           "/var/cache/bind/db.<%= node['domain'] %>-internal";
        allow-update 	{ localhost; };
    };

    zone "2.168.192.in-addr.arpa" IN {
        type         	master;
        allow-update 	{ localhost; };
        file         	"/var/cache/bind/db.2.168.192";
    };
};
